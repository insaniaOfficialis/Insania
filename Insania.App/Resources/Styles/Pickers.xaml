<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Picker" x:Key="PickerPrimary">
        <Setter Property="FontFamily" Value="Georgia"/>
        <Setter Property="FontSize" Value="{OnIdiom Desktop=20, Phone=15}"/>
        <Setter Property="TextColor" Value="{StaticResource PrimaryText}"/>
        <Setter Property="TitleColor" Value="{StaticResource SecondaryButton}"/>
    </Style>

    <Style TargetType="Picker" x:Key="PickerSecondary">
        <Setter Property="FontFamily" Value="Georgia"/>
        <Setter Property="FontSize" Value="{OnIdiom Desktop=15, Phone=10}"/>
        <Setter Property="TextColor" Value="{StaticResource PrimaryText}"/>
        <Setter Property="TitleColor" Value="{StaticResource SecondaryButton}"/>
    </Style>

</ResourceDictionary>